html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Heroku SSO Generator
    meta(name='description', content=description)
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    link(rel='stylesheet', href="/public/style.css")
  body
    h1 Heroku SSO Generator

    form(method="POST")
      input(type="url", name="url", placeholder="Add-on URL", required)
      input(type="text", name="salt", placeholder="Add-on Salt", required)
      input(type="text", name="id", placeholder="Resource ID", required)
      input(type="text", name="app", value="my-heroku-app", placeholder="App name", required)
      input(type="email", name="email", value="user@example.com", placeholder="Email", required)
      input(type="submit", value="Login", required)
